#pragma once
#include <string>
#include <queue>
#include <mutex>
#include <memory>

#include "Commands.h"

namespace circleAssignment {

class CommandQueue {
protected:
	std::mutex queueMutex;
	std::queue<std::shared_ptr<DrawingCommand>> commandQueue;

public:
	void push(std::shared_ptr<DrawingCommand> command);
	std::shared_ptr<DrawingCommand> pop();
};

}
